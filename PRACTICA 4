	float A, B, C;

	cout << "Ingresa el primer número: ";
	cin >> A;

	cout << "Ingresa el segundo número: ";
	cin >> B;

	cout << "Ingresa el tercer número: ";
	cin >> C;

	float mayor;

	if (A >= B && A >= C) {
		mayor = A;
	}
	else if (B >= A && B >= C) {
		mayor = B;
	}
	else {
		mayor = C;
	}

	cout << "El número más grande es: " << mayor << endl;


