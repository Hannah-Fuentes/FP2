#include <vector>

int numeros[10]
{ 34,23,53,16,27,5,25,42,82 };

vector <int> numeros
{ 34, 23, 53, 16, 27, 5, 25, 42, 82 };
int mayor = -1;

for (int i = 0; i <= 9; i++)
{
	if (numeros[i] > mayor)
	{
		mayor = numeros[i];
	}
}
cout << "El mayor es: " << mayor << endl;
