//21/11/2024

#include <iostream>

using namespace std;

int main()
{

	srand(time(NULL));
	int arreglo[10];
	for (int i = 0; i <= 9; i++)
	{
		arreglo[i] = rand() % 101;
	}
	for (int elemento : arreglo)
	{
		cout << elemento << endl;
	}
}

